<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>org.monster.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>BooksListServlet</servlet-name>
    <servlet-class>org.monster.controller.BooksListServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>SysuserListSerclet</servlet-name>
    <servlet-class>org.monster.controller.SysuserListSerclet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>DeleteBooksServlet</servlet-name>
    <servlet-class>org.monster.controller.DeleteBooksServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>AddBooksServlet</servlet-name>
    <servlet-class>org.monster.controller.AddBooksServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>QueryBooksByIdServlet</servlet-name>
    <servlet-class>org.monster.controller.QueryBooksByIdServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>UpdateBooksServlet</servlet-name>
    <servlet-class>org.monster.controller.UpdateBooksServlet</servlet-class>
  </servlet>







  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BooksListServlet</servlet-name>
    <url-pattern>/BooksListServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SysuserListSerclet</servlet-name>
    <url-pattern>/SysuserListSerclet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteBooksServlet</servlet-name>
    <url-pattern>/DeleteBooksServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddBooksServlet</servlet-name>
    <url-pattern>/AddBooksServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>QueryBooksByIdServlet</servlet-name>
    <url-pattern>/QueryBooksByIdServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateBooksServlet</servlet-name>
    <url-pattern>/UpdateBooksServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
